<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bar_bg_color" >
    
    <ImageButton
        android:id="@+id/title_bar_icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_title_bar_item_back"
        android:gravity="center"
        android:src="@drawable/title_bar_icon_back_btn" 
        android:text="返回 "/>

    <TextView
        android:id="@+id/title_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/app_name" 
        android:textSize="24sp"/>

    <ImageButton
        android:id="@+id/title_bar_icon_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_title_bar_item_msg"
        android:gravity="center"
        android:text="菜单"
        android:src="@drawable/title_bar_icon_msg_btn" />
   
</RelativeLayout>